{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<form method="post">
		{% if error %}
			<div class="alert alert-danger">Votre identifiant ou votre mot passe est incorrect. Veuillez recommencer !</div>
		{% endif %}

		{% if app.user %}
			<div class="container text-center pt-3">
				<div class="p-2 pt-3 m-auto connected-message">
					<p>Vous êtes connectés avec l'adresse mail
						{{ app.user.username }}, souhaitez-vous être
						<a href="{{ path('app_logout') }}">
							déconnecté
						</a>?</p>
					<p>Vous serez alors redirigé vers la page d'accueil</p>
				</div>
			</div>
		{% endif %}

		<div class="container">
			<div class="connexion-page">
				<h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
				<label for="inputEmail">Email</label><br>
				<input class="email-login" type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus><br>
				<label for="inputPassword">Password</label><br>
				<input class="password-login" type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"><br>

				<div class="w-75 text-end pt-3 bouton-sign-in">
					<button class="btn" type="submit">
						Sign in
					</button>
				</div>
			</div>
		</div>
	</form>
{% endblock %}
